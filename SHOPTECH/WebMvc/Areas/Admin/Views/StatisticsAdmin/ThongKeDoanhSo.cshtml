        async function loadMonthlyRevenueChart(beginMonth, beginYear, endMonth, endYear) {
            try {
                    let response = await fetch(`http://localhost:5114/doanhthuvadonhang?beginMonth=${beginMonth}&beginYear=${beginYear}&endMonth=${endMonth}&endYear=${endYear}`);
                    if (!response.ok) throw new Error('Network response was not ok');

                    let data = await response.json();
                    console.log(data);
                    monthlyRevenueChart.data.labels = data.labels;
                    monthlyRevenueChart.data.datasets[0].data = data.online;
                    monthlyRevenueChart.data.datasets[1].data = data.offline;
                    monthlyRevenueChart.update();

                    const totalOnline = data.online.reduce((sum, value) => sum + value, 0);
                    const totalOffline = data.offline.reduce((sum, value) => sum + value, 0);
                    const totalRevenue = totalOnline + totalOffline;

                    // Cập nhật các stat-number với format
                    document.getElementById('totalRevenue').textContent = formatNumber(totalRevenue);
                    document.getElementById('onlineRevenue').textContent = formatNumber(totalOnline);
                    document.getElementById('offlineRevenue').textContent = formatNumber(totalOffline);

                } catch (error) {
                    console.error('Error loading revenue chart:', error);
