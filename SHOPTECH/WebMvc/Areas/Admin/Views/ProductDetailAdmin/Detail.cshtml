@model Application.Dtos.ProductDetailDtos.DetailProductDetailDto

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin chi tiết sản phẩm</h3>
            <div class="card-tools">
                <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-sm btn-primary">
                    <i class="fas fa-edit"></i> Sửa
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Thông tin cơ bản</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tr>
                                        <th style="width: 30%">Mã sản phẩm</th>
                                        <td>@Model.Code</td>
                                    </tr>
                                    <tr>
                                        <th>Tên sản phẩm</th>
                                        <td>@Model.ProductName</td>
                                    </tr>
                                    <tr>
                                        <th>Số lượng</th>
                                        <td>@(Model.Quantity ?? 0)</td>
                                    </tr>
                                    <tr>
                                        <th>Giá</th>
                                        <td>@Model.Price.ToString("N0") đ</td>
                                    </tr>
                                    <tr>
                                        <th>Màu sắc</th>
                                        <td>
                                            @if (!string.IsNullOrEmpty(Model.ColorName))
                                            {
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(Model.ColorCode))
                                                    {
                                                        <div style="width: 20px; height: 20px; background-color: @Model.ColorCode; margin-right: 5px; border: 1px solid #ddd;"></div>
                                                    }
                                                    <span>@Model.ColorName</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Không có thông tin</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Trạng thái</th>
                                        <td>
                                            <div class="d-flex flex-wrap">
                                                @if (Model.IsNew == true)
                                                {
                                                    <span class="badge badge-info mr-1" style="width: 60px;">Mới</span>
                                                }
                                                @if (Model.IsHot == true)
                                                {
                                                    <span class="badge badge-danger mr-1" style="width: 60px;">Hot</span>
                                                }
                                                @if (Model.IsSale == true)
                                                {
                                                    <span class="badge badge-warning mr-1" style="width: 60px;">Sale</span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Hình ảnh chính</h4>
                        </div>
                        <div class="card-body text-center">
                            @if (Model.Image != null)
                            {
                                var base64String = Convert.ToBase64String(Model.Image.Data);
                                var imageSrc = $"data:{Model.Image.Type};base64,{base64String}";
                                <img src="@imageSrc" alt="Hình ảnh" class="img-fluid" style="max-width: 300px;" />
                            }
                            else
                            {
                                <div class="text-center p-5 bg-light">
                                    <i class="fas fa-image fa-5x text-muted"></i>
                                    <p class="mt-3 text-muted">Không có hình ảnh</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

