@model Application.Dtos.PageResultDto<Application.Dtos.ProductDtos.IndexProductDto>

@{
	ViewData["Title"] = "Quản lý danh hiệu";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<div class="d-flex justify-content-between align-items-center">
						<h4 class="card-title">Danh sách sản phẩm</h4>
						<a href="@Url.Action("Add", "ProductAdmin")" class="btn btn-primary">
							<i class="fas fa-plus"></i> Thêm mới
						</a>
					</div>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered table-hover" id="indexTable">
							<thead class="thead-light">
								<tr>
									<th width="15%">Hình ảnh</th>
									<th width="20%">Tên sản phẩm</th>
									<th width="20%">Hãng</th>
									<th width="20%">Danh mục</th>
									<th width="10%">Trạng thái</th>
									<th width="15%">Thao tác</th>
								</tr>
							</thead>
							<tbody>
								@if (Model?.Items != null)
								{
									@foreach (var item in Model.Items)
									{
										<tr>
											<td class="text-center">
												@if (item.MainImage != null)
												{
													var base64String = Convert.ToBase64String(item.MainImage.Data);
													var imageSrc = $"data:{item.MainImage.Type};base64,{base64String}";
													<img src="@imageSrc" alt="Image" style="max-width: 100px; max-height: 100px; width: auto; height: auto;" />
												}
												else
												{
													<span class="text-muted">Không có ảnh</span>
												}
											</td>
											<td>@item.Name</td>
											<td>@item.BrandName</td>
											<td>@item.CategoryName</td>
											<td class="text-center">
												@if (item.IsActive)
												{
													<span class="btn btn-success"> Bật</span>

												}
												else
												{
													<span class="btn btn-danger"> Tắt</span>
												}
											</td>
											<td class="text-center">
												<div class="btn-group">
													<a href="@Url.Action("Detail", "ProductAdmin", new {id = item.Id })" class="btn btn-sm btn-info">
														<i class="fas fa-info"></i> Xem
													</a>
													<a href="@Url.Action("Update", "ProductAdmin", new {id = item.Id })" class="btn btn-sm btn-warning">
														<i class="fas fa-edit"></i> Sửa
													</a>
													<a href="@Url.Action("Delete", "ProductAdmin", new {id = item.Id })" class="btn btn-sm btn-danger">
														<i class="fas fa-trash"></i> Xóa
													</a>

												</div>
											</td>
										</tr>
									}
								}
								else
								{
									<tr>
										<td colspan="6" class="text-center">Không có dữ liệu</td>
									</tr>
								}
							</tbody>
						</table>
						<!-- Hiển thị thông báo khi không có dữ liệu -->
						<div id="noDataMessage" style="display: none;">
							<p class="text-center">Không có dữ liệu</p>
						</div>
					</div>
				</div>
				<div class="card-footer">
					@if (Model != null)
					{
						@if (Model.TotalPages > 1)
						{
							<nav aria-label="Page navigation">
								<ul class="pagination justify-content-center">
									@if (Model.PageIndex > 1)
									{
										<li class="page-item">
											<a class="page-link" href="@Url.Action("Index", "ProductAdmin", new {pageIndex = Model.PageIndex - 1, pageSize = Model.PageSize })">
												<i class="fas fa-chevron-left"></i>
											</a>
										</li>
									}

									@{
										int startPage = Math.Max(1, Model.PageIndex - 2);
										int endPage = Math.Min(Model.TotalPages, startPage + 4);

										if (endPage - startPage < 4 && startPage > 1)
										{
											startPage = Math.Max(1, endPage - 4);
										}
									}

									@for (int i = startPage; i <= endPage; i++)
									{
										<li class="page-item @(i == Model.PageIndex ? "active" : "")">
											<a class="page-link" href="@Url.Action("Index", "ProductAdmin", new {pageIndex = i, pageSize = Model.PageSize })">
												@i
											</a>
										</li>
									}

									@if (Model.PageIndex < Model.TotalPages)
									{
										<li class="page-item">
											<a class="page-link" href="@Url.Action("Index", "ProductAdmin", new {pageIndex = Model.PageIndex + 1, pageSize = Model.PageSize })">
												<i class="fas fa-chevron-right"></i>
											</a>
										</li>
									}
								</ul>
							</nav>
						}
						<div class="text-center mt-2">
							<span>Hiển thị @((Model.PageIndex - 1) * Model.PageSize + 1) đến @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalItems)) của @Model.TotalItems bản ghi</span>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
