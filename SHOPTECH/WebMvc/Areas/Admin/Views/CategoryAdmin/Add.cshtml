@model Application.Dtos.CategoryDtos.AddCategoryDto
@{
	ViewData["Title"] = "Add new category";
}

<h2 class="mb-4">Add new category</h2>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Category Information</h4>
            </div>
            <div class="card-body">
                <form asp-controller="CategoryAdmin" asp-action="Add" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter brand name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter brand description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FormFile" class="control-label">Logo Image</label>
                        <input asp-for="FormFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="FormFile" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked/>
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4 text-center">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
