@model Application.Dtos.OrderDtos.CreateOnlineOrderDto
@using Application.Dtos.ProductDetailDtos;

@{
    ViewData["Title"] = "Checkout";
    var checkoutItems = ViewData["checkoutItems"] != null ? ViewData["checkoutItems"] as List<CheckoutItem> ?? new List<CheckoutItem>() : new List<CheckoutItem>();
    decimal totalAmount = 0; // Initialize total amount
}

<h2 class="text-center">Checkout</h2>
<h4 class="text-center">Total Products: @checkoutItems.Count</h4>

<form asp-controller="Order" asp-action="CreateOnlineOrder" method="post" id="checkoutForm" class="mt-4">
    <div class="mb-4">
        <h4>Product Information</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < checkoutItems.Count; i++)
                {
                    var item = checkoutItems[i];
                    var totalPrice = item.ProductDetail.Price * item.Quantity; // Calculate total price
                    totalAmount += totalPrice; // Accumulate total amount
                    <tr>
                        @{
                            var base64String = Convert.ToBase64String(item.ProductDetail.Image.Data);
                            var imageSrc = $"data:{item.ProductDetail.Image.Type};base64,{base64String}";
                        }
                        <td><img src="@imageSrc" width="60" class="img-thumbnail" /></td>
                        <td>@item.ProductDetail.Name</td>
                        <td>@item.ProductDetail.Price.ToString("N0") ₫</td>
                        <td>@item.Quantity</td>
                        <td>@totalPrice.ToString("N0") ₫</td> <!-- Display total price -->
                    </tr>

                    <!-- SỬA LỖI: Sử dụng index thay vì ProductDetailId -->
                    <input type="hidden" name="OrderDetails[@i].ProductDetailId" value="@item.ProductDetail.Id" />
                    <input type="hidden" name="OrderDetails[@i].Quantity" value="@item.Quantity" />
                }
            </tbody>
        </table>
        <h5 class="text-right">Total Amount: @totalAmount.ToString("N0") ₫</h5> <!-- Display total amount -->
    </div>

    <div class="mb-4">
        <h4>Shipping Information</h4>
        <div class="form-group">
            <label>Recipient Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Recipient Phone</label>
            <input asp-for="Phone" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Customer Note</label>
            <textarea asp-for="CustomerNote" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group">
            <label>Province/City</label>
            <select class="form-control" id="provinceSelect" required></select>
        </div>
        <div class="form-group">
            <label>District</label>
            <select class="form-control" id="districtSelect" required></select>
        </div>
        <div class="form-group">
            <label>Ward</label>
            <select class="form-control" id="wardSelect" name="WardId" required></select>
        </div>
        <div class="form-group">
            <label>Detailed Address</label>
            <input class="form-control" name="Address" required />
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-block mt-3">Place Order</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Load provinces
            $.get('/address/province', function (data) {
                $('#provinceSelect').append($('<option>').text('--Select Province--').val(''));
                $.each(data, function (i, p) {
                    $('#provinceSelect').append($('<option>').val(p.id).text(p.name));
                });
            });

            // On province change
            $('#provinceSelect').change(function () {
                var provinceId = $(this).val();
                $('#districtSelect').empty().append($('<option>').text('--Select District--').val(''));
                $('#wardSelect').empty().append($('<option>').text('--Select Ward--').val(''));
                if (provinceId) {
                    $.get('/address/district', { provinceId: provinceId }, function (data) {
                        $.each(data, function (i, d) {
                            $('#districtSelect').append($('<option>').val(d.id).text(d.name));
                        });
                    });
                }
            });

            // On district change
            $('#districtSelect').change(function () {
                var districtId = $(this).val();
                $('#wardSelect').empty().append($('<option>').text('--Select Ward--').val(''));
                if (districtId) {
                    $.get('/address/ward', { districtId: districtId }, function (data) {
                        $.each(data, function (i, w) {
                            $('#wardSelect').append($('<option>').val(w.id).text(w.name));
                        });
                    });
                }
            });
        });
    </script>
}