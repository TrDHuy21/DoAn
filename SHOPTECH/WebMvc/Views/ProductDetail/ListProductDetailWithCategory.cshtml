@{
    var categoryName = ViewData["CategoryName"] as string;
    var queryParams = ViewData["QueryParams"] as Dictionary<string, string>;
    
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cửa hàng màn hình máy tính</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/ListProduct.css">
    <script src="~/js/FilterMenu.js"></script> 
</head>
<body>
    <!-- Banner --> 
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="banner">
                    <img src="" alt="Banner MSI">
                </div>
            </div>
            <div class="col-md-6">
                <div class="banner">
                    <img src="" alt="Banner Office">
                </div>
            </div>
        </div>
    </div>

    <!-- Thương hiệu -->
    @await Component.InvokeAsync("BrandMenu")

    <!-- filter menu-->
    @await Component.InvokeAsync("FilterMenu", new { categoryName = @categoryName, queryParams = @queryParams })

    <!-- order by -->
    @await Component.InvokeAsync("ProductDetailList", new { categoryName = @categoryName, queryParams = @queryParams })

    <!-- product list -->
</body>
</html>