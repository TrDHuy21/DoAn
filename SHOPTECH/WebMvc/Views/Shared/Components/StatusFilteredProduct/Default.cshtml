@model IEnumerable<Application.Dtos.ProductDetailDtos.IndexProductDetailDto>

@if (Model != null && Model.Any())
{
	<section class="mb-4">
		<h2 class="section-title">@TempData["Name"]</h2>
		<div class="row">
			@foreach (var item in Model)
			{
				@await Component.InvokeAsync("CardProductDetail", new { productDetail = item })
			}
		</div>
	</section>
}